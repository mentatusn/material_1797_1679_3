<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mySmallComponentStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="myMediumComponentStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="myMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/myMediumComponentStyle</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="myTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">#4CFE53</item>
    </style>

    <style name="myHeadline1" parent="TextAppearance.MaterialComponents.Headline1">

        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">64sp</item>
        <item name="android:letterSpacing">0</item>

    </style>


    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FB149E</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="myChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="shapeAppearanceOverlay">@style/mySmallComponentStyle</item>
    </style>

    <style name="myFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#FF0C59FB</item>
    </style>

    <style name="myBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/red_600</item>
    </style>

</resources>